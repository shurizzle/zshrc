if (( $+1 )); then
    local opt
    zstyle -s ':zoppo:plugin:macos:brew' prefix opt
    opt="$opt/opt"

    [ -e "$opt/$1" ] && print -n -- "$opt/$1"
else
    local prefix
    zstyle -s ':zoppo:plugin:macos:brew' prefix prefix
    print -n -- "$prefix"
fi

