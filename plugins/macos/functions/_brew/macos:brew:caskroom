if (( $+1 )); then
    local caskroom
    zstyle -s ':zoppo:plugin:macos:brew' caskroom caskroom

    [ -L "$caskroom/$1" ] && echo "$caskroom/$1"
else
    local caskroom
    zstyle -s ':zoppo:plugin:macos:brew' caskroom caskroom
    print -n -- "$caskroom"
fi

