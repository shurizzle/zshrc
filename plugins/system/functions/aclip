(( $# == 1 )) || {
  print "USAGE: $0 <TEXT>" >&2
  return 1
}
if (($(adb devices | wc -l) > 2)); then
  adb shell "service call clipboard 2 i32 1 i32 18 s16 ${(q)1}"
else
  ssh root@droide "service call clipboard 2 i32 1 i32 18 s16 ${(q)1}"
fi

