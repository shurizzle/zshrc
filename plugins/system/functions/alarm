local dte1="$(date --date "${1}" +%s)"
local dte2="$(date +%s)"
local diffSec="$((dte1 - dte2))"

(( diffSec < 0 )) && return 1

for ((i=0; $i < 60; i+=5)); do
  sched "+$((diffSec + i * 60))" "$PLAYER ${(q)2:-$ALARM}"
done
amixer set Master 100% &>/dev/null

