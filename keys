# vim: ft=zsh
case "$TERM" in
    *rxvt*|xterm*)
        bindkey "\e[3~" delete-char
        bindkey "\e[5~" history-beginning-search-backward
        bindkey "\e[6~" history-beginning-search-forward
        bindkey "\e[7~" beginning-of-line
        bindkey "\e[8~" end-of-line
    ;;
    *)
        bindkey "\e[1~" beginning-of-line                   #Inizio
        bindkey "\e[3~" delete-char                         #Canc
        bindkey "\e[4~" end-of-line                         #Fine
        bindkey "\e[5~" history-beginning-search-forward    #PagUp
        bindkey "\e[6~" history-beginning-search-backward   #PagDown
    ;;
esac
